<project name="Dependency Import" default="dist" basedir=".">
    <!-- property file defining the component's dependencies -->

    <!-- Properties used in compile_targets ANT target for JDK version x -->
    <property name="component.target" value="1.5"/>
    <property name="component.bootclasspath" value="${java_1_5_bootclasspath}"/>

    <!-- TCS dependencies -->
    <property name="base_exception.jar" value="${tcs_libdir}/base_exception/2.0.0/base_exception.jar"/>
    <property name="configuration_api.jar" value="${tcs_libdir}/configuration_api/1.0.0/configuration_api.jar"/>
    <property name="config_manager.jar" value="${tcs_libdir}/configuration_manager/2.1.5/configuration_manager.jar"/>
    <property name="configuration_persistence.jar" value="${tcs_libdir}/configuration_persistence/1.0.1/configuration_persistence.jar"/>
    <property name="logging_wrapper.jar" value="${tcs_libdir}/logging_wrapper/2.0.0/logging_wrapper.jar"/>
    <property name="object_factory.jar" value="${tcs_libdir}/object_factory/2.1.2/object_factory.jar"/>
    <property name="object_factory_configuration_api_plugin.jar" value="${tcs_libdir}/object_factory_configuration_api_plugin/1.0.0/object_factory_configuration_api_plugin.jar"/>
    <property name="typesafe_enum.jar" value="${tcs_libdir}/typesafe_enum/1.1.0/typesafe_enum.jar"/>
    <property name="object_formatter.jar" value="${tcs_libdir}/object_formatter/1.0.0/object_formatter.jar"/>

    <!-- 3rd party dependencies -->
    <property name="junit.jar" value="${ext_libdir}/junit/4.6/junit-4.6.jar"/>
    <property name="log4j.jar" value="${ext_libdir}/log4j/1.2.15/log4j-1.2.15.jar" />

    <property name="jodconverter.jar" value="${ext_libdir}/jodconverter/2.2.2/lib/jodconverter-2.2.2.jar" />
    <property name="commons-io.jar" value="${ext_libdir}/jodconverter/2.2.2/lib/commons-io-1.4.jar" />
    <property name="juh.jar" value="${ext_libdir}/jodconverter/2.2.2/lib/juh-3.0.1.jar" />
    <property name="jurt.jar" value="${ext_libdir}/jodconverter/2.2.2/lib/jurt-3.0.1.jar" />
    <property name="ridl.jar" value="${ext_libdir}/jodconverter/2.2.2/lib/ridl-3.0.1.jar" />
    <property name="unoil.jar" value="${ext_libdir}/jodconverter/2.2.2/lib/unoil-3.0.1.jar" />
    <property name="xstream.jar" value="${ext_libdir}/jodconverter/2.2.2/lib/xstream-1.3.1.jar" />
    <property name="slf4j-api.jar" value="${ext_libdir}/jodconverter/2.2.2/lib/slf4j-api-1.5.6.jar" />
    <property name="slf4j-jdk14.jar" value="${ext_libdir}/jodconverter/2.2.2/lib/slf4j-jdk14-1.5.6.jar" />

    <path id="component.tcs-dependencies">
        <pathelement location="${base_exception.jar}"/>
        <pathelement location="${configuration_api.jar}"/>
        <pathelement location="${config_manager.jar}"/>
        <pathelement location="${configuration_persistence.jar}"/>
        <pathelement location="${logging_wrapper.jar}"/>
        <pathelement location="${object_factory.jar}"/>
        <pathelement location="${object_factory_configuration_api_plugin.jar}"/>
        <pathelement location="${object_formatter.jar}"/>
        <pathelement location="${typesafe_enum.jar}"/>
    </path>

    <path id="component.3rdParty-dependencies">
        <pathelement location="${junit.jar}"/>
        <!--jodconverter dependencies-->
        <pathelement location="${jodconverter.jar}"/>
        <pathelement location="${commons-io.jar}"/>
        <pathelement location="${juh.jar}"/>
        <pathelement location="${jurt.jar}"/>
        <pathelement location="${ridl.jar}"/>
        <pathelement location="${unoil.jar}"/>
        <pathelement location="${xstream.jar}"/>
        <pathelement location="${slf4j-api.jar}"/>
        <pathelement location="${slf4j-jdk14.jar}"/>
    </path>

    <path id="component.test.3rdParty-dependencies">
        <pathelement location="${junit.jar}"/>
    </path>

</project>
