<project name="tools.master">
    <description>
        The master build scripts defines useful targets and tasks to manage multiple components.
    </description>

    <dirname file="${ant.file.tools.master}" property="tools.master.basedir"/>

    <!-- path to the property file containing components definitions, default to 'components.xml' -->
    <condition property="components.conf" value="${basedir}/components.xml">
        <not>
            <isset property="components.conf"/>
        </not>
    </condition>

    <path id="script.path">
        <pathelement location="${tools.master.basedir}/lib/third_party/groovy-all-1.5.7.jar"/>
    </path>

    <path id="svn.path">
        <fileset dir="${tools.master.basedir}/lib/third_party/svnant/">
            <include name="svn*.jar"/>
        </fileset>
    </path>

    <import file="${tools.master.basedir}/build-master-tasks.xml"/>
    <import file="${tools.master.basedir}/build-master-utils.xml"/>
    <import file="${tools.master.basedir}/build-master-targets.xml"/>
</project>
