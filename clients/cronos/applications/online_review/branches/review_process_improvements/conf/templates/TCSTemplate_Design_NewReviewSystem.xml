<?xml version="1.0"?>
<!-- A template which defines a set of project phases -->
<Template name="Design (New Review System)">
    <!-- An enumeration of project phase types defined in this template -->
    <PhaseTypes>
        <PhaseType id="registration" typeId="1" typeName="Registration"/>
        <PhaseType id="submission" typeId="2" typeName="Submission"/>
        <PhaseType id="screening" typeId="3" typeName="Screening"/>
        <PhaseType id="aggregation" typeId="7" typeName="Aggregation"/>
        <PhaseType id="aggregation_review" typeId="8" typeName="Aggregation Review"/>
        <PhaseType id="final_fixes" typeId="9" typeName="Final Fix"/>
        <PhaseType id="final_review" typeId="10" typeName="Final Review"/>
        <PhaseType id="approval" typeId="11" typeName="Approval"/>
        <PhaseType id="specification_submission" typeId="13" typeName="Specification Submission"/>
        <PhaseType id="specification_review" typeId="14" typeName="Specification Review"/>
        <PhaseType id="secondary_reviewer_review" typeId="15" typeName="Secondary Reviewer Review"/>
        <PhaseType id="primary_review_evaluation" typeId="16" typeName="Primary Review Evaluation"/>
        <PhaseType id="first_appeals" typeId="17" typeName="First Appeals"/>
        <PhaseType id="second_appeals" typeId="18" typeName="Second Appeals"/>
        <PhaseType id="primary_review_appeals_response" typeId="19" typeName="Primary Review Appeals Response"/>
        <PhaseType id="review_registration" typeId="20" typeName="Review Registration"/>
    </PhaseTypes>
    <!-- A set of project phases defined in this template. -->
    <Phases>
        <!-- A definition of a single phase. -->
        <Phase id="specificationSubmissionPhase" length="43200000" type="specification_submission" phaseId="1"/>

        <Phase id="specificationReviewPhase" length="43200000" type="specification_review" phaseId="2">
            <Dependency id="specificationSubmissionPhase" isDependencyStart="false" isDependentStart="true"
                        lagTime="0"/>
        </Phase>

        <Phase id="registrationPhase" length="172800000" type="registration" phaseId="3">
            <Dependency id="specificationReviewPhase" isDependencyStart="false" isDependentStart="true" lagTime="0"/>
        </Phase>

        <Phase id="reviewRegistrationPhase" length="172800000" type="review_registration" phaseId="4">
            <Dependency id="specificationReviewPhase" isDependencyStart="false" isDependentStart="true" lagTime="0"/>
        </Phase>

        <Phase id="submissionPhase" length="345600000" type="submission" phaseId="5">
            <Dependency id="registrationPhase" isDependencyStart="true" isDependentStart="true" lagTime="300000"/>
        </Phase>

        <Phase id="screeningPhase" length="21600000" type="screening" phaseId="6">
            <Dependency id="submissionPhase" isDependencyStart="false" isDependentStart="true" lagTime="0"/>
        </Phase>

        <Phase id="reviewPhase" length="172800000" type="secondary_reviewer_review" phaseId="7">
            <!-- "isDependencyStart" is optional attribute(default to "false"), here it is omitted -->
            <Dependency id="screeningPhase" isDependencyStart="false" isDependentStart="true" lagTime="0"/>
        </Phase>

        <Phase id="primaryReviewEvaluation" length="86400000" type="primary_review_evaluation" phaseId="8">
            <!-- "isDependentStart" is optional attribute(default to "true"), here it is omitted -->
            <Dependency id="reviewPhase" isDependencyStart="false" isDependentStart="true" lagTime="0"/>
        </Phase>

        <Phase id="firstAppeals" length="86400000" type="first_appeals" phaseId="9">
            <!-- "isDependentStart" is optional attribute(default to "true"), here it is omitted -->
            <Dependency id="primaryReviewEvaluation" isDependencyStart="false" isDependentStart="true" lagTime="0"/>
        </Phase>

        <Phase id="primaryReviewAppealsResponse" length="43200000" type="primary_review_appeals_response" phaseId="10">
            <!-- "lagTime" is optional attribute(default to "0"), here it is omitted -->
            <Dependency id="firstAppeals" isDependencyStart="false" isDependentStart="true"/>
        </Phase>

        <Phase id="aggregationPhase" length="21600000" type="aggregation" phaseId="11">
            <!-- all attributes except "id" are omitted -->
            <Dependency id="primaryReviewAppealsResponse"  isDependencyStart="false" isDependentStart="true"/>
        </Phase>

        <Phase id="aggregationReviewPhase" length="7200000" type="aggregation_review" phaseId="12">
            <Dependency id="aggregationPhase" isDependencyStart="false" isDependentStart="true" lagTime="0"/>
        </Phase>

        <Phase id="finalFixesPhase" length="86400000" type="final_fixes" phaseId="13">
            <Dependency id="aggregationReviewPhase" isDependencyStart="false" isDependentStart="true" lagTime="0"/>
        </Phase>

        <Phase id="finalReviewPhase" length="43200000" type="final_review" phaseId="14">
            <Dependency id="finalFixesPhase" isDependencyStart="false" isDependentStart="true" lagTime="0"/>
        </Phase>

        <Phase id="approvalPhase" length="432000000" type="approval" phaseId="15">
            <Dependency id="finalReviewPhase" isDependencyStart="false" isDependentStart="true" lagTime="0"/>
        </Phase>
    </Phases>
</Template>
