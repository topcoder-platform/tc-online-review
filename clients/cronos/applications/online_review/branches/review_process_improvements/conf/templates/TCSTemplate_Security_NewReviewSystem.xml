<?xml version="1.0"?>
<!-- A template which defines a set of project phases -->
<Template name="Security (New Review System)">
    <!-- An enumeration of project phase types defined in this template -->
    <PhaseTypes>
        <PhaseType id="registration" typeId="1" typeName="Registration"/>
        <PhaseType id="submission" typeId="2" typeName="Submission"/>
        <PhaseType id="secondary_reviewer_review" typeId="15" typeName="Secondary Reviewer Review"/>
        <PhaseType id="primary_review_evaluation" typeId="16" typeName="Primary Review Evaluation"/>
        <PhaseType id="first_appeals" typeId="17" typeName="First Appeals"/>
        <PhaseType id="second_appeals" typeId="18" typeName="Second Appeals"/>
        <PhaseType id="primary_review_appeals_response" typeId="19" typeName="Primary Review Appeals Response"/>
        <PhaseType id="review_registration" typeId="20" typeName="Review Registration"/>
    </PhaseTypes>
    <!-- A set of project phases defined in this template. -->
    <Phases>
        <Phase id="reviewRegistrationPhase" length="172800000" type="review_registration" phaseId="1"/>

        <Phase id="submissionPhase" length="3600000" type="submission" phaseId="2"/>

        <Phase id="reviewPhase" length="172800000" type="secondary_reviewer_review" phaseId="3">
            <!-- "isDependencyStart" is optional attribute(default to "false"), here it is omitted -->
            <Dependency id="submissionPhase" isDependencyStart="false" isDependentStart="true" lagTime="0"/>
        </Phase>

        <Phase id="primaryReviewEvaluation" length="86400000" type="primary_review_evaluation" phaseId="4">
            <!-- "isDependentStart" is optional attribute(default to "true"), here it is omitted -->
            <Dependency id="reviewPhase" isDependencyStart="false" isDependentStart="true" lagTime="0"/>
        </Phase>

        <Phase id="firstAppeals" length="86400000" type="first_appeals" phaseId="5">
            <!-- "isDependentStart" is optional attribute(default to "true"), here it is omitted -->
            <Dependency id="primaryReviewEvaluation" isDependencyStart="false" isDependentStart="true" lagTime="0"/>
        </Phase>

        <Phase id="primaryReviewAppealsResponse" length="43200000" type="primary_review_appeals_response" phaseId="6">
            <!-- "lagTime" is optional attribute(default to "0"), here it is omitted -->
            <Dependency id="firstAppeals" isDependencyStart="false" isDependentStart="true"/>
        </Phase>

    </Phases>
</Template>
