<?xml version="1.0"?>
<!-- A template which defines a set of project phases -->
<Template name="Studio">
	<!-- An enumeration of project phase types defined in this template -->
	<PhaseTypes>
		<PhaseType id="submission" typeId="1" typeName="Submission"/>
		<PhaseType id="review" typeId="2" typeName="Review"/>
		<PhaseType id="appeals" typeId="3" typeName="Appeals"/>
		<PhaseType id="appeals_response" typeId="4" typeName="Appeals Response"/>
		<PhaseType id="aggregation" typeId="5" typeName="Aggregation"/>
		<!--
		<PhaseType id="aggregation_review" typeId="6" typeName="Aggregation Review"/>
	-->
		<PhaseType id="final_fixes" typeId="7" typeName="Final Fix"/>
		<PhaseType id="final_review" typeId="8" typeName="Final Review"/>
	</PhaseTypes>
	<!-- A set of project phases defined in this template. -->
	<Phases>
		<!-- A definition of a single phase. -->
		<Phase id="submissionPhase" length="604800000" type="submission" phaseId="1"/>

		<Phase id="reviewPhase" length="345600000" type="review" phaseId="2">
			<!-- "isDependencyStart" is optional attribute(default to "false"), here it is omitted -->
			<Dependency id="submissionPhase" isDependentStart="true" lagTime="300000"/>
		</Phase>

		<Phase id="appealsPhase" length="0" type="appeals" phaseId="3">
			<!-- "isDependentStart" is optional attribute(default to "true"), here it is omitted -->
			<Dependency id="reviewPhase" isDependencyStart="false" lagTime="0"/>
		</Phase>

		<Phase id="appealsReponsePhase" length="0" type="appeals_response" phaseId="4">
			<!-- "lagTime" is optional attribute(default to "0"), here it is omitted -->
			<Dependency id="appealsPhase" isDependencyStart="false" isDependentStart="true"/>
		</Phase>

		<Phase id="aggregationPhase" length="43200000" type="aggregation" phaseId="5">
			<!-- all attributes except "id" are omitted -->
			<Dependency id="appealsReponsePhase"/>
		</Phase>
<!--
		<Phase id="aggregationReviewPhase" length="43200000" type="aggregation_review" phaseId="6">
			<Dependency id="aggregationPhase" isDependencyStart="false" isDependentStart="true" lagTime="0"/>
		</Phase>
-->
		<Phase id="finalFixesPhase" length="259200000" type="final_fixes" phaseId="7">
			<Dependency id="aggregationPhase" isDependencyStart="false" isDependentStart="true" lagTime="0"/>
		</Phase>

		<Phase id="finalReviewPhase" length="86400000" type="final_review" phaseId="8">
			<Dependency id="finalFixesPhase" isDependencyStart="false" isDependentStart="true" lagTime="0"/>
		</Phase>
	</Phases>
</Template>
