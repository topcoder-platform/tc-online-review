<?xml version="1.0" encoding="UTF-8"?>
<!--DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd"-->

<web-app>
    <display-name>Online Review</display-name>

    <!-- The Usual Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Standard Action Servlet Configuration -->
    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>/WEB-INF/struts-config.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- Online Review Ajax Support Servlet Configuration -->
    <servlet>
        <servlet-name>AjaxServlet</servlet-name>
        <servlet-class>com.cronos.onlinereview.ajax.AjaxSupportServlet</servlet-class>
    </servlet>

    <!-- Standard Action Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>

    <!-- Online Review Ajax Support Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>AjaxServlet</servlet-name>
        <url-pattern>/ajaxSupport</url-pattern>
    </servlet-mapping>


   <session-config>
      <session-timeout>120</session-timeout>
   </session-config>

    <!-- Struts Tag Library Descriptors -->
    <taglib>
        <taglib-uri>/tags/struts-bean</taglib-uri>
        <taglib-location>/WEB-INF/struts-bean-el.tld</taglib-location>
    </taglib>

    <taglib>
        <taglib-uri>/tags/struts-html</taglib-uri>
        <taglib-location>/WEB-INF/struts-html-el.tld</taglib-location>
    </taglib>

    <taglib>
        <taglib-uri>/tags/struts-logic</taglib-uri>
        <taglib-location>/WEB-INF/struts-logic-el.tld</taglib-location>
    </taglib>

    <!-- Online Review Helper Functions -->
    <taglib>
        <taglib-uri>/tags/or-functions</taglib-uri>
        <taglib-location>/WEB-INF/or-functions.tld</taglib-location>
    </taglib>

    <!-- TopCoder Web Tags -->
    <taglib>
        <taglib-uri>/tags/tc-webtags</taglib-uri>
        <taglib-location>/WEB-INF/tc-webtags.tld</taglib-location>
    </taglib>

    <ejb-ref>
        <ejb-ref-name>security/Login</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <home>com.topcoder.security.login.LoginRemoteHome</home>
        <remote>com.topcoder.security.login.LoginRemote</remote>
    </ejb-ref>
    
    <!-- Error Page -->
    <error-page>
    	<exception-type>java.lang.Throwable</exception-type>
    	<location>/jsp/errorPage.jsp</location>
    </error-page>
</web-app>
