<CMConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="C:\tcs\Components\Configuration Manager\web\doc\CM v2 Schema.xsd" version="v2">
    <Config name="com.topcoder.db.connectionfactory.DBConnectionFactoryImpl">
        <Property name="connections">
            <Property name="default">
                <Value>informix_connection</Value>
            </Property>

            <Property name="informix_connection">
                <Property name="producer">
                    <Value>com.topcoder.db.connectionfactory.producers.JDBCConnectionProducer</Value>
                </Property>
                <Property name="parameters">
                    <Property name="jdbc_driver">
                        <Value>com.informix.jdbc.IfxDriver</Value>
                    </Property>
                    <Property name="jdbc_url">
                        <Value>jdbc:informix-sqli://@database.server@:@database.port@/tcs_catalog:INFORMIXSERVER=informixoltp_tcp</Value>
                    </Property>
                    <Property name="user">
                        <Value>@database.username@</Value>
                    </Property>
                    <Property name="password">
                        <Value>@database.password@</Value>
                    </Property>
                    <Property name="IFX_USE_STRENC">
                        <Value>true</Value>
                    </Property>
                    <Property name="new_connection_sql">
                        <Value>set lock mode to wait 5;</Value>
                    </Property>
                </Property>
            </Property>
        </Property>
    </Config>
</CMConfig>

