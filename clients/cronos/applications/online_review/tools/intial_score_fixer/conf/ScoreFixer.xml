<CMConfig>

    <!--
        ==========  Configuration for DB Connection Factory component ==========
    -->
    <Config name="com.topcoder.db.connectionfactory.DBConnectionFactoryImpl">
        <Property name="connections">
            <Property name="default">
                <Value>tcs</Value>
            </Property>
            <Property name="tcs">
                <Property name="producer">
                    <Value>com.topcoder.db.connectionfactory.producers.JDBCConnectionProducer</Value>
                </Property>
                <Property name="parameters">
                    <Property name="jdbc_driver">
                        <Value>com.informix.jdbc.IfxDriver</Value>
                    </Property>
                    <Property name="jdbc_url">
                        <Value>&databaseUrl;</Value>
                    </Property>
                    <Property name="user">
                        <Value>&databaseUsername;</Value>
                    </Property>
                    <Property name="password">
                        <Value>&databasePassword;</Value>
                    </Property>
                </Property>
            </Property>
            <Property name="oldDB">
                <Property name="producer">
                    <Value>com.topcoder.db.connectionfactory.producers.JDBCConnectionProducer</Value>
                </Property>
                <Property name="parameters">
                    <Property name="jdbc_driver">
                        <Value>com.informix.jdbc.IfxDriver</Value>
                    </Property>
                    <Property name="jdbc_url">
                        <Value>&oldDatabaseUrl;</Value>
                    </Property>
                    <Property name="user">
                        <Value>&oldDatabaseUsername;</Value>
                    </Property>
                    <Property name="password">
                        <Value>&oldDatabasePassword;</Value>
                    </Property>
                </Property>
            </Property>
        </Property>
    </Config>

    <!--
        ========== Configuration for Review Score Calculator component ==========
