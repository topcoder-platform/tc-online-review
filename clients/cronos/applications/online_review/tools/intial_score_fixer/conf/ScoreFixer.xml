<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE CMConfig [
    <!ENTITY databaseUrl "jdbc:informix-sqli://ip/tcs_catalog:INFORMIXSERVER=informixoltp_tcp">
    <!ENTITY databaseUsername "coder">
    <!ENTITY databasePassword "xx">
    
    <!ENTITY oldDatabaseUrl "jdbc:informix-sqli://ip/tcs_catalog_aaa:INFORMIXSERVER=informixoltp_tcp">
    <!ENTITY oldDatabaseUsername "coder">
